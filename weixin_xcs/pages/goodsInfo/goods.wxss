.od_bar{
   position: fixed;
   width: 100%;
   height: 100rpx;
   background-color: #ffffff;
   bottom: 0;
   left: 0;
   text-align: center;
   z-index: 999;
}
.od_bar_mu{
   width: 18vw;
   padding-top: 10rpx;
   font-size: 12px;
}
.od_bar_mu icon{
   font-size: 15px;
   display: block;
   height: 36rpx;
}
.od_bar text{
   display: block;
}
.od_bar_mu icon.icon-pq-phone{
   font-size: 19px;
}
.od_bar .weui-flex__item{
   background-color: #e60012;
   line-height: 1.8;
   color: #ffffff;
}