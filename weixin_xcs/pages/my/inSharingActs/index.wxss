@import '../base.wxss';
@import '../template/acts-list-item/list-item.wxss';
@import "../template/no-list/no-list.wxss";

page {
  background-color: #f8f8f8 !important;
}

.no_list_opt {
  display: block;
  margin-top: 180rpx;
}

.list_item {
  margin-top: 20rpx;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
}

.noSingle {
  margin-top: 40rpx;
}

.share {
  padding: 13rpx 20rpx;
  border: 2rpx solid #999;
  border-radius: 10rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 23%;
  text-align: center;
}

.active {
  padding: 13rpx 20rpx;
  border: 2rpx solid #999;
  border-radius: 10rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 38%;
  text-align: center;
}
