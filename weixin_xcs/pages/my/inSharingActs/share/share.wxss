/* pages/my/participatingActs/share/share.wxss */
@import '../../base.wxss';
@import '../../template/acts-list-item/list-item.wxss';


view{
  font-size: 28rpx;
  color: #333;
}
.container_box{
  height: 100%;
  background-color: #f0f0f0;
}
.container{
  background-color: #fff;
}
    /* 倒计时 */
    .count_down{
      padding: 30rpx;
      line-height: 1;
      text-align: center;
      position: relative;
    }
    .count_down_label{
      padding-bottom:3px;
      margin-right: 16rpx;
      color: #666;
      position: absolute;
      left: 14%;
      top:40%;
    }
    .count_down_value{
      margin-left: 10rpx;
      font-size: 60rpx;
      font-weight: 400;
      color: #666;
    }

    /* 购买成功提示 */
    .bought_tip{
      text-align: center;
    }
    .bought_tip_title{
      padding: 80rpx 0 40rpx;
      line-height: 1;
    }
    .bought_tip_title_logo{
      width: 45rpx;
      height: 45rpx;
    }
    .bought_tip_title_logo > image{
      width: 100%;
      height: 100%;
    }
    .bought_tip_title_txt{
      margin-left: 20rpx;
      font-size: 42rpx;
      color: #e60012;
    }
    .bought_tip_cont{
      color: #666;
    }

    /* 活动信息 */
    .acts_info{
      margin-top: 80rpx;
      padding: 0 30rpx;
    }
    .acts_info_inner{
      padding: 15rpx;
      border: 1rpx solid #e8e8e8;
      border-radius: 20rpx;
    }

    /* 参团信息 */
    .group_info{
      margin-top: 50rpx;
      padding: 0 30rpx;
      text-align: center;
    }
    .group_info_logo{
      margin-right: 70rpx;
      width: 88rpx;
      height: 88rpx;
      border-radius: 50%;
      overflow: hidden;
    }
    .group_info_logo:last-child{
      margin: 0;
    }
    .group_info_logo > image{
      width: 100%;
      height: 100%;
    }
    .group_info_tip{
      font-size: 28rpx;
      color: #333333;
    }
    .group_info_time{
      font-size: 28rpx;
      color: #333333;
    }
    .group_info_logos {
      margin-bottom: 40rpx;
    }
    /* 按钮列表 */
    .btn_list{
      padding-top: 55rpx;
    }
    .btn_item{
      display: block;
      margin-top: 30rpx;
    }

    /* 其他入口 */
    .entry{
      padding: 30rpx 0;
    }
    .entry_inner{
      width: 70%;
    }
    .entry_item_logo{
      margin-right: 20rpx;
    }
    .entry_item_logo > icon{
      font-size: 40rpx;
      color: #666;
    }
    .order {
      width: 50%;
      border-right: 1rpx solid #eeeeee;
    }
    .entry_item1{
      width: 50%;
      border-right: 1rpx solid #e7e7e7;
    }
