.item-cont {
  width: 425rpx;
  height: 100%;
}

.acts_info_inner .item-cont {
  /* 分享-活动信息 */
  width: 395rpx;
}

.item-name {
  display: -webkit-box;
  height: 50%;
  line-height: 40rpx;
  font-size: 28rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-other {
  position: absolute;
  margin-top:20rpx;
  width: 60%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 30rpx;
}

.item-price {
  line-height: 1.8;
  /* display: flex;
  justify-content: center;
  align-items: center; */
}

.item-origin {
  line-height: 1;
  font-size: 24rpx;
  color: #999;
}

.item-origin > view {
  text-decoration: line-through;
}

.item-discount {
  font-size: 28rpx;
  /* color: #666; */
  color: #e60012;
  /* margin-right: 29rpx; */
}

.item-type {
  position: absolute;
  right: 0;
  /* bottom: -40rpx; */
}

.single, .rewards {
  font-size: 26rpx;
  color: #666;
}

/* 可编辑状态 */

.item-sel-edit {
  display: flex;
}

.item-cont-edit {
  width: 335rpx;
}

.item-type-edit {
  display: none;
}

.sel-img-selected {
  color: #e60012;
}

.sel-img-noselected {
  color: #999;
}

/* 操作栏 */

.item-opts-box {
  padding: 30rpx;
}

.item-opts-box {
  padding: 13rpx 30rpx;
}

.remark {
  color: #888;
}

.short_num {
  margin: 0 10rpx;
  color: #e20004;
}

.opts_btns > view {
  margin-left: 20rpx;
  display: inline-block;
  padding: 13rpx 20rpx;
  border: 2rpx solid #999;
  border-radius: 10rpx;
  line-height: 1;
}

.item-opt-box {
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.item-opt-txt > text {
  color: #e60012;
}

