.item-info-box {
  padding: 30rpx;
  height: 220rpx;
  background-color: #fff;
}

.acts_info_inner .item-info-box {
  /* 分享-活动信息 */
  padding: 0;
  height: 160rpx;
}

.item-sel {
  display: none;
  padding: 0 40rpx 0 10rpx;
  width: 90rpx;
  height: 100%;
}

.item-sel-box {
  width: 100%;
}

.item-info {
  width: 100%;
  height: 100%;
}

