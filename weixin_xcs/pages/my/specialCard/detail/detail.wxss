/* pages/my/specialCard/detail/detail.wxss */
@import '../../template/multi-specialcard/multi-specialcard.wxss';

/* store-top  --start*/

.container {
  padding-bottom: 100rpx;
}

.store-top {
  width: 750rpx;
  height: 81rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
	justify-content: space-between;
  background-color: #fff;
  border-bottom: 1rpx solid #F7F7F7;
}

.store-name {
  display: flex;
}

.store-name > image {
  width: 40rpx;
  height: 40rpx;
}

.name {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
	font-weight: 500;
}

.use-lose {
  font-size: 28rpx;
  color: #e60012;
	font-weight: 500;
}

/* store-top  --end*/

/* card-info  --start */

.card-info {
  width: 100%;
  height: 280rpx;
  background-color: #fff;
  padding: 0 30rpx;
}

.card-top {
  /* height:206rpx; */
  border-bottom: 1rpx solid #eee;
  display: flex;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.card-img {
  width: 246rpx;
  height: 164rpx;
  /* margin:21rpx 0; */
}

.info-detail {
  width: 444rpx;
  /* height:158rpx; *//* margin:21rpx 0; */
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 1.2;
}

.product-price {
  color: #e60012;
  font-size: 28rpx;
}

.time-count {
  display: flex;
  align-items: center;
  flex-direction: row;
  height: 85rpx;
  width: 100%;
}

.date {
  width: 55%;
  font-size: 26rpx;
  color: #333;
}

.count {
  display: flex;
  width: 45%;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
}

/* card-info  --end */

/* contact-seller  --start */

.contact-seller {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
}

.contact-title {
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 0 30rpx;
  color: #333;
  font-size: 28rpx;
	font-weight: 500;
}

.contact-title image {
  width: 42rpx;
  height: 42rpx;
}

.that-shop {
  height: auto;
  padding: 30rpx 30rpx;
  font-size: 26rpx;
  color: #666;
}

.instruction {
  height: 92rpx;
  line-height: 92rpx;
  padding-left: 30rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}

.instruction > text {
  color: #999;
}

.card-code {
  height: 92rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  color: #333;
  background-color: #fff;
	margin-top:20rpx;
	border-bottom:1rpx solid #eee;
}

.card-left,.remain-count {
  font-size: 28rpx;
  color: #333;
}

.card-name {
  font-size: 26rpx;
}

.red {
  color: #e60012;
}

.bold {
  font-weight: 600;
}

.two-dimen-code {
  height: 716rpx;
  background-color: #fff;
  
}

.img-code {
  width: 387rpx;
  height: 387rpx;
  margin: 0 auto;
  display: block;
  padding-top: 100rpx;
}

.bottom-hint {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-top: 80rpx;
	font-weight: 500;
}

/* contact-seller  --end */

.lose-date {
  height: 165rpx;
  background-color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}


.lose-hint {
  font-size: 36rpx;
  color: #fff;
  margin-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

/* records  --start */

.records {
  display: flex;
  flex-direction: column;
  background-color: #fff;
	margin-top:20rpx;
}

.records-title,.records-time {
  padding: 0rpx 30rpx;
	height:80rpx;
	line-height: 80rpx;
}

.records-time {
  border-top: 1rpx solid #eee;
  color: #999;
}

/* records  --end */

.sad-img {
  width: 55rpx;
  height: 55rpx;
}

.sad-img > image {
  width: 55rpx;
  height: 55rpx;
}
