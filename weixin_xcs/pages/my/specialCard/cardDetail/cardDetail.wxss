/* pages/my/specialCard/cardDetail/cardDetail.wxss */

.top {
  height: 241rpx;
  position: relative;
}

.top-t {
  height: 174rpx;
  background-color: #3d3d3d;
}

.top-b {
  height: 67rpx;
  background-color: #fff;
}

.top-img {
  width: 100%;
  height: 175rpx;
}

.top-card {
  width: 690rpx;
  height: 211rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  background-image: url('https://ptq.oss-cn-hangzhou.aliyuncs.com/ptq/wxxcx/multicard_info.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.card-info {
  width: 555rpx;
  padding: 20rpx 20rpx 20rpx 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #fff;
}

.card-t {
  width: 104rpx;
  height: 34rpx;
  background: rgba(251, 235, 207, 1);
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(230, 0, 18, 1);
  text-align: center;
  line-height: 34rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.4;
  margin-top: 5rpx;
  height: 70rpx;
}

.card-price-date {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-price {
  font-size: 36rpx;
  font-weight: bold;
}

.card-date {
  font-size: 22rpx;
}

.card-content {
  height: auto;
  padding: 0 30rpx 20rpx 30rpx;
  background-color: #fff;
}

.red {
  color: #e60012;
}

.bold {
  font-weight: 600;
  width: 150rpx;
  min-width: 150rpx;
}

.card-top {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding: 49rpx 0 25rpx 0;
  line-height: 1;
}

.card-img {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: auto;
}

.act-img {
  width: 100%;
  height:460rpx;
  display: block;
	margin-top:12rpx;
}

.img-content {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.date {
  font-size: 26rpx;
  color: #666;
}

.card-des{
	font-size: 28rpx;
	color:#333;
	margin-bottom:15rpx;
	line-height: 1.4;
}

.no-more{
	height:130rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.no-img,.no-img > image{
	width:36rpx;
	height:36rpx;
}
.no-text{
	font-size: 22rpx;
	color:#999;
	margin-top:10rpx;
}
