/* pages/my/order/detail/detail.wxss */
@import '../../base.wxss';
@import '../../template/order-list-item/list-item.wxss';

page{
  background-color: #f8f8f8 !important;
}
.base_info{
  background-color: #fff;
}

.box{
  margin-top: 20rpx;
}
.contact_info{
  background-color: #fff;
}
.contact_seller{
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  font-size: 28rpx;
}
.contact_icon{
  width: 50rpx;
  height: 50rpx;
  background-image: url(https://www.pintuanqu.cn/Public/WeChatApps/image/store4_ico3.png);
  background-size: 100% 100%;
}

.contact_detail{
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #666;
}

.block{
  padding: 25rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}
.block:last-child{
  border: none;
}
.confirm_txt{
  padding: 20rpx 30rpx;
  background-color: #fff;
  font-size: 28rpx;
}
.confirm_QRcode{
  padding: 70rpx 0;
  margin: 20rpx 30rpx 120rpx;
  background-color: #fff;
}
.QRcode{
  width: 100%;
  height: 400rpx;
}
.QRcode > image{
  width: 400rpx;
  height: 400rpx;
}
.QRcode_tip{
  margin-top: 65rpx;
  width: 100%;
  text-align: center;
  font-size: 35rpx;
}

.order_opts{
  padding: 40rpx 0 100rpx;
  width: 100%;
}
.order_opts > .order_opts_btn{
  display: block;
  margin: 0 auto 40rpx;
}
/* 提示框 */
.userPrompts{
/* background:rgba(247,247,247,1); */
  background-color: #fff;
}
.user{
  margin: 0 30rpx;
  padding:15rpx;
  background:rgba(247,247,247,1);
  font-size: 22rpx;
}
.empty{
  height: 20rpx;
  background-color: #fff
}