/* pages/my/order/evaluate/add.wxss */
@import '../../base.wxss';


.cont{
  border-bottom: 20rpx solid #f0f0f0;
}
.rate{
  padding: 40rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.rate_act_logo{
  width: 200rpx;
  height: 133rpx;
}
.rate_act_logo > image{
  width: 100%;
  height: 100%;
}
.rate_cont{
  margin-left: 30rpx;
}
.rate_cont > view{
  height: 65rpx;
}
.rate_cont_title{
  font-size: 32rpx;
}

.opinion{
  padding: 30rpx;
  height: 330rpx;
  font-size: 32rpx;
}
.opinion > textarea{
  width: 100%;
  height: 100%;
}

.photo{
  font-size: 28rpx;
}
.photo_header{
  padding: 20rpx 30rpx;
}
.photo_num{
  color: #999;
}
.photo_cont{
  padding: 0 30rpx;
}
.photo_cont_item{
  display: inline-block;
  /* margin-top: 20rpx; */
  margin-right: 1.3%;
  width: 24%;
  height: 165rpx;
}
.photo_cont_item > image{
  width: 100%;
  height: 100%;
}
.photo_cont_item:nth-child(4n){
  margin-right: 0
}
.photo_opt{
  padding: 30rpx;
}
.photo_opt_sel{
  display: inline-block;
}
.icon-pq-circle{
  color: #999;
}
.icon-pq-xuanzhong{
  color: #e60012;
}
.photo_opt_label{
  display: inline-block;
  margin-left: 20rpx;
  color: #666;
}

.save{
width:100%;
margin-top: 135rpx ;
padding-bottom: 105rpx
}
