/* component/scroll/scroll.wxss */
.scroll{}
.scroll-item{
  float: left;
  overflow: hidden;
  margin-left: 8rpx;
  padding: 0 10rpx;
  border-radius: 10rpx;
  background-color: #fff;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.scroll-item:first-child{
  margin-left: none;
}
.scroll-item> view{
  height: 44rpx;
  line-height: 44rpx;
}

.scroll-0 {
    animation: scroll-0 0.01s ease;
    -webkit-animation: scroll-0 0.01s ease;
    transform: translate3d(0, -44rpx, 0);
}
.scroll-1 {
    animation: scroll-1 0.03s ease;
    -webkit-animation: scroll-1 0.03s ease;
    transform: translate3d(0, -88rpx, 0);
}
.scroll-2 {
    animation: scroll-2 0.06s ease;
    -webkit-animation: scroll-2 0.06s ease;
    transform: translate3d(0, -132rpx, 0);
}
.scroll-3 {
    animation: scroll-3 0.1s ease;
    -webkit-animation: scroll-3 0.1s ease;
    transform: translate3d(0, -176rpx, 0);
}
