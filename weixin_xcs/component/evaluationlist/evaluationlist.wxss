/* component/evaluationList/evaluationList.wxss */

.evaluationList_com {
  word-wrap: break-word;
  background-color: #f8f8f8;
}

.evaluationList_com view {
  /* box-sizing: content-box; */
  font-size: 26rpx;
}

.eval_li {
  padding: 20rpx 30rpx 20rpx 30rpx;
  color: #000;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.notEva_not {
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
  color: #000;
}

.user_info {
  padding-bottom: 20rpx;
  border-bottom: 2rpx #f5f5f5 solid;
  display: flex;
}

.user_info_img {
  width: 90rpx;
  height: 90rpx;
  min-width: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.notEva_img image {
  width: 50vw;
  max-width: 100%;
  height: 50vw;
}

.user_info_name_txt {
  font-size: 1.2em;
}

.user_info_score {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80vw;
}

.cenFlex {
  display: flex;
  align-items: center;
  justify-content: center;
}

.user_info_score_num {
  width: 30rpx;
  height: 30rpx;
  min-width: 30rpx;
  margin-right: 10rpx;
  display: block;
}

.user_info_name {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.user_info_time {
  font-size: 0.9em;
  color: #999;
  margin-right: 20rpx;
  display: block;
}

.user_evalCont {
  padding: 25rpx 0rpx;
  font-size: 1.2em;
  text-align: left;
}

.user_evalImg {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.user_evalImg_in {
  height: 220rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.user_evalImg_in > image {
  width: 220rpx;
  min-width: 220rpx;
  height: 220rpx;
}

.user_eval_store {
  padding: 20rpx;
  position: relative;
  background: #f0f0f0;
  margin-top: 20rpx;
  width: 95vw;
}

.user_eval_store_in {
  position: relative;
  z-index: 2;
  word-break: break-all;
}

.user_eval_store::after {
  content: "";
  width: 40rpx;
  height: 40rpx;
  background: #f0f0f0;
  transform: rotate(53deg) skewX(20deg);
  display: block;
  position: absolute;
  left: 35rpx;
  top: -10rpx;
  z-index: 1;
}
