.cenFlex{
    display: flex;
    align-items: center;
    justify-content: center;
}
img{
	width: 100%;
	height: 100%;
}
.csb_mask{
  	position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
}
.csb_box{
	position: fixed;
    z-index: 5000;
    width: 86%;
    min-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    border-radius: 20rpx;
    overflow: hidden;
}
.csb_box_t{
	padding: 20rpx 30rpx;
	border-bottom: 1rpx #ccc solid;
	position: relative;
	text-align: center;
}
.csb_box_t_eidt{
    position: absolute;
    right: 30rpx;
    min-width: 50rpx;
    height: 50rpx;
    width: 50rpx;
    border-radius: 50%;
    top: 15rpx;
}
.csb_box_m{
    padding: 0rpx 30rpx;
    border-bottom: 1rpx #ccc solid;
}
.csb_box_m_price{
    margin:45rpx 0rpx;
    width: 100%;
    font-size: 60rpx;
}
.csb_box_m_pay1{
    color: #666;
    font-size: 24rpx;
}
.csb_box_m_pay2{
    display: flex;
    margin: 20rpx 0rpx;
}
.csb_box_m_pay2_img{
    width: 60rpx;
    height: 60rpx;
    min-width: 60rpx;
    margin-right: 20rpx;
}
.csb_box_m_pay2_txt{
    font-size: 26rpx;
}
.csb_box_m_p{
    padding: 65rpx 30rpx;
}
.csb_box_m_p_in{
    width: 65rpx;
    height: 65rpx;
    padding: 10rpx;
    min-width: 65rpx;
    border:1rpx #ccc solid;
    margin-right: 15rpx;
    position: relative;
    z-index: 3;
}
.csb_box_m_p_in:last:child{
    margin-right: 0rpx;
}
.gB_r{
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: #000;
}
.csb_box_m_p_input{
    position: absolute;
    background: #000;
    opacity: 0;
    left: -1000000%;
    z-index: -1;

}
.csb_box_m_p_input input{
    width: 100%;
    height: 100%;
    position:relative;
    z-index: -1
}
.gB_huh{
    position: absolute;
    width: 5rpx;
    height: 65rpx;
    background: #666;
    animation: huh .3s alternate infinite;
}
@keyframes huh
{
from {opacity: .2;}
to {opacity: .8;}
}