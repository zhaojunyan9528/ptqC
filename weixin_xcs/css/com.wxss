/*标签  */

.tag-yh {
   display: inline-block;
   padding: 6rpx 0rpx;
   border-top: 2rpx #ffa625 dashed;
   border-bottom: 2rpx #ffa625 dashed;
   border-left: 2rpx #ffa625 solid;
   border-right: 2rpx #ffa625 solid;
   border-radius: 8rpx;
}

.tag-yh text {
   padding: 0rpx 20rpx;
   color: #fff;
   font-size: 12px;
   background: #ffa625;
}

.type-box {
   padding: 10rpx 0;
   border-top-style: dashed;
   border-bottom-style: dashed;
   border-left-style: solid;
   border-right-style: solid;
   border-width: 2rpx;
   border-color: #eee;
   border-radius: 10rpx;
   height: 100%;
}

.type-box text {
   padding: 0 20rpx;
   background-color: #eee;
   text-align: center;
   color: #fff;
}

.yyy {
   font-size: 13px;
}

/*滚动图片  */

.headerImgBox {
   width: 100%;
   height: 500rpx;
   position: relative;
}

.headerImgBox swiper-item {
   width: 100%;
   height: 100%;
   overflow: hidden;
}

.headerImgBox swiper-item image {
   width: 100%;
}
/* 文字超出省略号 */
.clamp1,.clamp2{    
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    overflow: hidden;
}
.clamp1{
    -webkit-line-clamp: 1;
    word-break: break-all;
}
.clamp2{
    -webkit-line-clamp: 2;
}
/*类型切换菜单  */

.weui-navbar {
   border: none;
   position: relative;
   background-color: #fff;
   z-index: 99;
}

.weui-navbar__item {
   padding: 0 0 10px 0;
   height: 88rpx;
   position: relative;
   font-size: 28rpx
}

.weui-navbar__title {
   line-height: 80rpx;
}

.weui-navbar__item.weui-bar__item_on {
   color: #e60012;
}

.weui-navbar__item.weui-bar__item_on::after {
   content: '';
   position: absolute;
   width:100%;
   height: 1;
   color: #e5e5e5;
   -webkit-transform-origin: 0 0;
   transform-origin: 0 0;
   -webkit-transform: scale(0.5);
   transform: scale(0.5);
   z-index: 100;
   bottom: 0px;
   left: 25%;
   border-bottom: 2px solid #e60012;
}

/*间隔  */

.space-w10, .space-h10, .space-w30, .space-h30, .space-h60, .space-w60,
.space-h120, .space-w120 {
